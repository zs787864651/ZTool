<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/clockBackgroundPrimary"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/dimen_10"
        tools:context="com.xiaomai.geek.ui.module.github.UserActivity">

        <LinearLayout
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.xiaomai.geek.ui.widget.UserCard
                android:id="@+id/userCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/repo"
                style="@style/MimeTextView"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/button_selector"
                android:text="Repositories"
                android:textColor="?attr/clockTextColor" />

            <TextView
                android:id="@+id/starred"
                style="@style/MimeTextView"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/button_selector"
                android:text="Starred Repositories"
                android:textColor="?attr/clockTextColor" />

            <TextView
                android:id="@+id/following"
                style="@style/MimeTextView"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/button_selector"
                android:text="Following"
                android:textColor="?attr/clockTextColor" />

            <TextView
                android:id="@+id/followers"
                style="@style/MimeTextView"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/button_selector"
                android:text="Followers"
                android:textColor="?attr/clockTextColor" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:text="退出登录"
        android:textColor="@android:color/white" />
</LinearLayout>